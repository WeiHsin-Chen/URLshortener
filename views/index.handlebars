<div class="container mt-5" style="text-align:center">

  <div class="title">
    <h1>
      URL Shortener
    </h1>
  </div>
  <div class="pic">
    <span class="text-info" style="font-size: 100px;">
      <i class="fas fa-link"></i>
    </span>
  </div>

  {{#if shortenUrl}}
  <div class="success">
    <span class="text-dark" style="font-size: 20px;">SuccessÔºÅ Please use this link</span>
    <div id="shortenUrl">
      {{protocol}}://{{currentUrl}}/{{shortenUrl}}
    </div>
  </div>

  <div class=" confirm mt-3">
    <button class="btn btn-danger btn-lg" type="submit" id="copyButton" onclick="copyUrl()">Copy</button>
  </div>

  {{else}}
  <form action="/" method="POST">
    <div class="form-row mt-3 mb-3" id="input">
      <div class="col-auto">
        <input type="text" name="inputURL" class="form-control" required placeholder="Enter URL here..."
          aria-label="URL..." aria-describedby="inputURL" value={{keyword}}>
      </div>
    </div>

    <a href="/">
      <button class="btn btn-outline-danger btn-lg" type="submit">Shorten</button>
    </a>
  </form>
  {{/if}}
</div>

<script src='/javascript/copyUrl.js'></script>